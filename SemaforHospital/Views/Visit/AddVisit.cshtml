@model Visit

<section id="appointment" class="appointment section-bg">
    <div style="padding:150px;" class="container">

        <div class="section-title">
            <h2>Enter Visit Information</h2>
        </div>




        <form asp-controller="Visit" asp-action="AddVisit" method="post">
            <div class="row">
                <div class="col-md-4 form-group">
                    <label asp-for="patient_id" class="control-label">Patient Id</label>
                    <input asp-for="patient_id" placeholder="Please enter patient's id" type="text" max="11" class="form-control" required />
                    <span asp-validation-for="patient_id" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <label>Date:</label>
                    <input asp-for="visit_date" type="date" class="form-control" required />
                    <span asp-validation-for="visit_date" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <label>Time:</label>
                    <input asp-for="visit_date" type="time" class="form-control" required />
                    <span asp-validation-for="visit_date" class="text-danger"></span>
                </div>



            </div>
            <div class="row">
                <div class="col-md-4 form-group mt-3">
                    <label asp-for="doctor_name" class="control-label">Doctor Name</label>
                    <input asp-for="doctor_name" placeholder="Enter only letter" pattern="[A-Za-z\s]+" type="text" class="form-control" required />
                    <span asp-validation-for="doctor_name" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group mt-3">
                    <label asp-for="complaint" class="control-label">Complaint</label>
                    <input asp-for="complaint" type="text" class="form-control" required />
                    <span asp-validation-for="complaint" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group mt-3">
                    <label asp-for="form_of_treatment" class="control-label">Form Of Treatment</label>
                    <input asp-for="form_of_treatment" type="text" class="form-control" required />
                    <span asp-validation-for="form_of_treatment" class="text-danger"></span>
                </div>

            </div>

            <br />
            <br />
            <div class="text-center">
                <input type="submit" value="Add Visit" class="btn btn-primary" />
            </div>
            <br />
            <br />
            @if (@ViewBag.visitError != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.visitError
                </div>
            }
        </form>







    </div>
</section><!-- End Appointment Section -->