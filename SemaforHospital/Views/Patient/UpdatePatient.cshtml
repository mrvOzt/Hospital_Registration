@model ApplicationContext

<h2>Select a Patient</h2>
<section id="appointment" class="appointment section-bg">
    <div style="padding:150px;" class="container">

        <div class="section-title">
            <h2>Select Patient</h2>
        </div>

        <form asp-controller="Patient" asp-action="SelectPatient" method="post">
            <div class="form-group">
                <label>Select a patient:</label>
                <select asp-for="SelectedPatientId" class="form-control">
                    <option value="">-- Select --</option>
                    @{
                        foreach (var patient in (List<Semafor_Hospital_Registrastion_System.Models.Patient>)ViewBag.patients)
                        {

                            <option value="@patient.id">@patient.id_no - @patient.name_surname </option>



                        }
                    }

                </select>
            </div>
            <br />
            <br />
            <div class="text-center">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>
        </form>
            


    </div>
</section>
        