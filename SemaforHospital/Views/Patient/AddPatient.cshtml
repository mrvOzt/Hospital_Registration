@model Patient


<section id="appointment" class="appointment section-bg">
    <div style="padding:150px;" class="container">

        <div class="section-title">
            <h2>Enter Patient Information</h2>
        </div>



       
        <form asp-controller="Patient" asp-action="AddPatient" method="post">
            <div class="row">
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <label asp-for="id_no" class="control-label">Identification No</label>
                    <input asp-for="id_no" placeholder="Enter only number" pattern="[0-9]+" type="text" max="11" class="form-control" required />
                    <span asp-validation-for="id_no" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="name_surname" class="control-label">Name - Surname</label>
                    <input asp-for="name_surname" placeholder="Enter only letter" type="text" pattern="[A-Za-z\s]+" maxlength="40" class="form-control" required />
                    <span asp-validation-for="name_surname" class="text-danger"></span>
                </div>

                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <label asp-for="birth_date" class="control-label">Birth Date</label>
                    <input asp-for="birth_date" type="date" class="form-control" placeholder="Please enter date" required />
                    <span asp-validation-for="birth_date" class="text-danger"></span>
                </div>
            </div>
            <br />
            <br />
            <div class="text-center">
                <input type="submit" value="Add Patient" class="btn btn-primary" />
            </div>
            <br />
            <br />
            @if (@ViewBag.idError != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.idError
                </div>
            }

        </form>







    </div>
</section><!-- End Appointment Section -->