    ViewBag.PageName = "index";
}

<html>
<body>
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center">
        <div class="container">
            <h1 style="font-size:38px">Welcome to Semafor Hospital</h1>
